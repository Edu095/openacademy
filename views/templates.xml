<odoo>
    <data>
        <template id="index">
            <t t-call="website.layout">
                <t t-set="title">Openacademy</t>
                <div class="oe_structure"/>
                <div class="oe_structure">
                    <div class="container">
                        <p>
                            <t t-esc="helloworld"/>
                        </p>
                    </div>
                </div>
            </t>
        </template>

        <template id="course">
            <t t-call="website.layout">
                <t t-set="title">Openacademy</t>
                <div class="oe_structure"/>
                <div class="oe_structure">
                    <div class="container">
                        <t t-foreach="course" t-as="cour">
                            <p>
                                <a t-attf-href="/openacademy/openacademy/{{ slug(cour) }}">
                                    <t t-esc="cour.name"/>
                                </a>
                            </p>
                        </t>
                    </div>
                </div>
            </t>
        </template>

        <template id="info">
            <t t-call="website.layout">
                <t t-set="title">Openacademy</t>
                <div class="oe_structure"/>
                <div class="oe_structure">
                    <div class="container">
                        <h3><t t-esc="course.name"/></h3>
                        <p><t t-esc="course.description"/></p>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>